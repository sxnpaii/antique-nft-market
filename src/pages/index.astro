---
// components
import Layout from "../layouts/Layout.astro";
// sections
import HeroSlider from "../sections/HomePage/HeroSlider.astro";
import Count from "../sections/HomePage/Count.astro";
import SomeNfts from "../sections/HomePage/SomeNfts.astro";
import RecentDrops from "../sections/HomePage/RecentDrops.astro";
import NewsLetter from "../sections/HomePage/NewsLetter.astro";
import LatestPosts from "../sections/HomePage/LatestPosts.astro";
// styles
import "../styles/globals.scss";
// ssr
export const prerender = true;
---

<Layout
  title="Antique NFT market"
  description="We have rare & unique antique NFTs collections"
>
  <!-- Hero -->
  <HeroSlider />
  <!-- Count -->
  <Count />
  <!-- SomeNfts -->
  <SomeNfts />
  <!-- RecentDrops -->
  <RecentDrops />
  <!-- NewsLetter -->
  <NewsLetter />
  <!-- LatestPosts -->
  <LatestPosts />
  <!-- init swiperjs -->
  <script
    src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-element-bundle.min.js"
  ></script>
</Layout>
