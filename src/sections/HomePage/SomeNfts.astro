---
// components
import Collection from "../../components/Collection.astro";
// routes
import { marketplace } from "../../utils/routes";
// collections
import { collections, slug } from "../../utils/utils";
// styles
import "../../styles/sections-style/HomePage/SomeNfts.scss";
---

<section class="SomeNfts">
    <h2>Some NFTs collections</h2>
    <swiper-container
        class="mySwiper SomeNfts"
        autoplay-delay="2500"
        slides-per-view="4"
    >
        {
            collections.map((colects) => (
                <swiper-slide>
                    <Collection collections={colects}/>
                </swiper-slide>
            ))
        }
    </swiper-container>
</section>
<script>
    // render on client side
    import { swiperBreakpoints } from "../../utils/utils";

    let swiperEl = document.querySelector(".mySwiper.SomeNfts");
    swiperBreakpoints(swiperEl);
</script>
