---
// components
import Post from "../../components/Post.astro";
// styles
import "../../styles/sections-style/HomePage/LatestPosts.scss";
// posts
import { posts } from "../../utils/posts";
---

<section class="LatestPosts">
    <h2>Latest Informations</h2>
    <swiper-container class="mySwiper LatestPosts">
        {
            posts.map((post) => (
                <swiper-slide>
                    <Post post={post} />
                </swiper-slide>
            ))
        }
    </swiper-container>
</section>

<script>
    let swiperEl = document.querySelector(".mySwiper.LatestPosts");

    Object.assign(swiperEl, {
        breakpoints: {
            320: {
                slidesPerView: 1,
                spaceBetween: 10,
            },
            570: {
                slidesPerView: 2,
                spaceBetween: 20,
            },
            992: {
                slidesPerView: 3,
                spaceBetween: 30,
            },
        },
    });
</script>
