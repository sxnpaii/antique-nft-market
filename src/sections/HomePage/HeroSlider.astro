---
// components
import Nft from "../../components/Nft.astro";
// utils, images
import { sliderImages } from "../../utils/utils";
// styles
import "../../styles/sections-style/HomePage/HeroSlider.scss";
---

<section class="Hero">
    <h1>Antique NFT market</h1>
    <swiper-container
        class="mySwiper Hero"
        autoplay-delay="2500"
        centered-slides="true"
    >
        {
            sliderImages.map((img) => (
                <swiper-slide class="swiper-slide">
                    <Nft nft={img} />
                </swiper-slide>
            ))
        }
    </swiper-container>
</section>

<script>
    let swiperEl = document.querySelector(".mySwiper.Hero");

    Object.assign(swiperEl, {
        breakpoints: {
            320: {
                slidesPerView: 1,
                spaceBetween: 10,
            },
            450: {
                slidesPerView: 2,
                spaceBetween: 20,
            },
            768: {
                slidesPerView: 3,
                spaceBetween: 30,
            },
        },
    });
</script>
