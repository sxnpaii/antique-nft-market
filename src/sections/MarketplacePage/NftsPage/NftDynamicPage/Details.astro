---
// nft from props
const { nft } = Astro.props;
// routes
import { mainRoutes } from "../../../../utils/routes";
// styles
import "../../../../styles/sections-style/MarketplacePage/NftsPage/NftDynamicPage/Details.scss";
---

<section class="Details">
  <h2>
    {nft.name}
  </h2>
  <p>
    Created at:
    <span>
      {new Date(nft.created_at).toDateString()}
    </span>
  </p>
  <p>
    Artist:
    <a href={`${mainRoutes.artists}${nft.artist.username}`}>
      {nft.artist.full_name}
    </a>
  </p>
  <p>
    Styles:
    {nft && nft.style.map((styl) => <span>{styl}</span>)}
  </p>
  <p class="price">
    Price:
    <span>{nft.price} Eth</span>
  </p>
  <p class="description">
    {nft.description}
  </p>
</section>
